@{
    ViewBag.Title = "Wyszukiwarka faktur";
}

<br />

<h2>@ViewBag.Title</h2>


<hr />
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @id = "searchInvoiceForm", @class = "form-inline" }))
{

    <div class="col-xs-8 pull-left">
        @Html.Label("Numer faktury", new { @class = "margin-top-10" })
        @Html.TextBox("invNumber", "", new { @class = "input-sm form-control margin-right-10 margin-left-20" })
        <br />
        @Html.Label("Tytuł faktury", new { @class = "margin-top-10" })
        @Html.TextBox("title", "", new { @class = "input-sm form-control margin-right-10 margin-left-20" })
        <br />

        <div class="col-sm-4 pull-left margin-top-20 margin-right-10">
            <h4>Sprzedawca</h4>
            @Html.Label("Imię", new { @class = "margin-top-10" })
            @Html.TextBox("vname", "", new { @class = "input-sm form-control margin-right-10 margin-left-20" })
            <br />
            @Html.Label("Nazwisko", new { @class = "margin-top-10" })
            @Html.TextBox("vlastname", "", new { @class = "input-sm form-control margin-right-10 margin-left-20" })
            <br />
            @Html.Label("Firma", new { @class = "margin-top-10" })
            @Html.TextBox("vcompany", "", new { @class = "input-sm form-control margin-right-10 margin-left-20" })
            <br />
            @Html.Label("Vatin", new { @class = "margin-top-10" })
            @Html.TextBox("vvatin", "", new { @class = "input-sm form-control margin-right-10 margin-left-20" })
            <br />
        </div>

        <div class="col-sm-4 pull-left margin-top-20 margin-left-20">
            <h4>Kupiec</h4>
            @Html.Label("Imię", new { @class = "margin-top-10" })
            @Html.TextBox("bname", "", new { @class = "input-sm form-control margin-right-10 margin-left-20" })
            <br />
            @Html.Label("Nazwisko", new { @class = "margin-top-10" })
            @Html.TextBox("blastname", "", new { @class = "input-sm form-control margin-right-10 margin-left-20" })
            <br />
            @Html.Label("Firma", new { @class = "margin-top-10" })
            @Html.TextBox("bcompany", "", new { @class = "input-sm form-control margin-right-10 margin-left-20" })
            <br />
            @Html.Label("Vatin", new { @class = "margin-top-10" })
            @Html.TextBox("bvatin", "", new { @class = "input-sm form-control margin-right-10 margin-left-20" })
            <br />
        </div>

        <div class="clearfix"></div>
        <br />
        @Html.Label("Data początkowa", new { @class = "margin-top-10" })
        @Html.TextBox("start", "", new { @class = "my-date input-sm form-control margin-right-10 margin-left-20", @placeholder = "Start date" })
        <br />
        @Html.Label("Data końcowa", new { @class = "margin-top-10" })
        @Html.TextBox("end", "", new { @class = "my-date input-sm form-control margin-right-10 margin-left-20", @placeholder = "End date" })
        <br />
        @Html.Label("Wartość minimalna", new { @class = "margin-top-10" })
        @Html.TextBox("minValue", "", new { @class = "input-sm form-control margin-right-10 margin-left-20"@*, @type = "number", @min = "0", @step = "0.01"*@ })
        <br />
        @Html.Label("Wartość maksymalna", new { @class = "margin-top-10" })
        @Html.TextBox("maxValue", "", new { @class = "input-sm form-control margin-right-10 margin-left-20"@*, @type = "number", @min = "0", @step="0.01"*@ })
        <br />
        @Html.Label("Nowe", new { @class = "margin-top-10" })
        @Html.CheckBox("newF", true, new { @class = ""})
        <br />
        @Html.Label("Zapłacone", new { @class = "margin-top-10" })
        @Html.CheckBox("paid", false, new { @class = "" })
        <br />
        @Html.Label("Zarchiwizowane", new { @class = "margin-top-10" })
        @Html.CheckBox("archived", false, new { @class = "" })
        <br />
        @Html.Label("Ilość wyników na stronie", new { @class = "margin-top-10", @id = "rowsPerPageFieldLabel" })
        @Html.TextBox("rowsPerPageField", 50, new { @class = "input-sm form-control margin-right-10 margin-left-20", @required = "true", @type = "number", @min = "0" })
        <br /> 
        @*<button type="submit" name="searchButton" id="searchButton" value="Send" class="btn margin-top-10 margin-bottom-10">Szukaj</button>*@
    </div>
}
    <div class="clearfix"></div>
    <button id="searchForInvoicesButton" class="btn margin-top-10 margin-bottom-10">Szukaj</button>

    



    <div class=" clearfix"></div>
 
    <div id="invoiceSearchResults">
        
    </div>



@section Scripts {
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/custom/bootstrap-datepicker.js"></script>
    @Styles.Render("~/Content/bootstrap-datepicker.css")
    <script src="~/Scripts/custom/HomeScripts.js"></script>

}
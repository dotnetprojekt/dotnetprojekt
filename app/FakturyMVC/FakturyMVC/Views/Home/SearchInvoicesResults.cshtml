@model FakturyMVC.Models.InvoicesViewModel


<div class="">
    <table class="table table-striped table-hover margin-top-10" id="resultTable">
        <tr>
            <th>Numer</th>
            <th>Sprzedawca</th>
            <th>Kupiec</th>
            <th>Data</th>            
        </tr>
        @for (int i = 0; i < Model.Invoices.Count; i++)
        {
            <tr id=@Model.Invoices[i].Number name=@i title="@Model.Invoices[i].Number">
                <th>@Model.Invoices[i].Number</th>
                <th>@Model.Invoices[i].Vendor</th>
                <th>@Model.Invoices[i].Buyer</th>
                <th>@Model.Invoices[i].Date</th>
            </tr>
        }


    </table>
</div>


@section Scripts {
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/custom/bootstrap-datepicker.js"></script>
    @Styles.Render("~/Content/bootstrap-datepicker.css")
    <script src="~/Scripts/custom/HomeScripts.js"></script>

}